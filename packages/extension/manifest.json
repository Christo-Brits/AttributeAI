{
  "manifest_version": 3,
  "name": "AttributeAI - Ultimate Keyword Intelligence",
  "version": "1.0.0",
  "description": "Unlimited AI-powered keyword research with attribution tracking. The superior alternative to Keywords Everywhere.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "host_permissions"
  ],
  "host_permissions": [
    "https://*.google.com/*",
    "https://*.youtube.com/*",
    "https://*.amazon.com/*",
    "https://*.ebay.com/*",
    "https://*.etsy.com/*",
    "https://*.pinterest.com/*",
    "https://*.bing.com/*",
    "https://*.attributeai.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.google.com/*",
        "https://*.youtube.com/*",
        "https://*.amazon.com/*",
        "https://*.ebay.com/*",
        "https://*.etsy.com/*",
        "https://*.pinterest.com/*",
        "https://*.bing.com/*"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/templates/*.html",
        "assets/*",
        "icons/*"
      ],
      "matches": [
        "https://*.google.com/*",
        "https://*.youtube.com/*",
        "https://*.amazon.com/*",
        "https://*.ebay.com/*",
        "https://*.etsy.com/*",
        "https://*.pinterest.com/*",
        "https://*.bing.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options/options.html",
  "commands": {
    "analyze_keyword": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Analyze current page keywords"
    },
    "quick_research": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Quick keyword research popup"
    }
  }
}
